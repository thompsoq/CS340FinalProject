<h1>{{pageName}}</h1>
<table id="t01" border="1">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Rating</th>
            <th>Description</th>
			<th>Rating ID</th>	
        </tr>
    </thead>
    <tbody>
        {{#if rows.length }}
            {{#each rows }}
                <tr>
                    <td>{{this.user_name}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.desc}}</td>
					<td>{{this.rID}}</td>
                </tr>
            {{/each}}
        {{else}}
            <tr><td colspan="3"><p class='lead'><em>No records were found.</em></p></td></tr>
        {{/if}}
    </tbody>
</table>