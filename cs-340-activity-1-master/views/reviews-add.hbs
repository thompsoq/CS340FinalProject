<h2>{{message}}</h2>
<form method="post" id="addForm">
    <fieldset>
        <legend>Part Info:</legend>
		<p>
            <label for="User Name">User Name:</label>
            <input type="text" name="user_name" id="user_name">
        </p>
        <p>
            <label for="Rating">Rating:</label>
            <input type="number" min=1 max=10 class="required" name="rating" id="rating" title="rating should be numeric">
        </p>
        <p>
            <label for="Description">Desc:</label>
            <input type="text" class="required" name="desc" id="desc">
	    </p>
        <p>
            <label for="Rating ID">Rating ID:</label>
            <input type="number" class="required" min=1 max=999 class="required" name="rID" id="rID" title="rID should be numeric">
 
    </fieldset>

    <p>
        <input type="submit" value="Submit" />
        <input type="reset" value="Clear Form" />
    </p>
</form>
<script type="text/javascript" src="/assets/verify-input.js"></script>